Show
	BaseType == "Divine Life Flask"
	Corrupted False
	Mirrored False
	Rarity <= Rare
	ItemLevel >= 81 # T1 increased amount recovered
	#!GoodBaseBorder!#
	MinimapIcon 1 Pink Star
	#!DefaultBackground!#
	CustomAlertSound "sounds/rue-limp.mp3"

Show
	ItemLevel >= 86
	Rarity <= Rare
	BaseDefencePercentile >= 50
	Corrupted False
	Mirrored False
	BaseType "Battle Buckler" "Crusader Buckler" # 9% ms bucklers
	SetFontSize 45
	PlayEffect Red
	CustomAlertSound "sounds/haa-jj-all-stars.mp3"
	MinimapIcon 1 Yellow Star
	#!DefaultBackground!#

Show
	ItemLevel >= 77
	Rarity = Rare
	BaseDefencePercentile >= 60
	Corrupted False
	Mirrored False
	BaseType "Battle Buckler" "Crusader Buckler"
	SetFontSize 45
	PlayEffect Yellow
	MinimapIcon 1 Yellow Star
	#!DefaultBackground!#
	#!LevelingBorder!#

Show
	BaseType "Feathered Arrow Quiver"
	ItemLevel >= 82 # T1 Projectile Speed, DoT Multi
	Rarity = Rare
	SetFontSize 45
	PlayEffect Yellow
	MinimapIcon 1 Yellow Star
	#!DefaultBackground!#
	#!GoodBaseBorder!#

Show
	BaseType "Feathered Arrow Quiver"
	ItemLevel >= 76 # T2 DoT Multi
	Rarity = Rare
	SetFontSize 40
	MinimapIcon 1 Yellow Cross
	#!DefaultBackground!#
	#!LevelingBorder!#

Show
	BaseType "Short Bow"
	AreaLevel <= 13
	#!LevelingBorder!#
	SetFontSize 40

Show
	AreaLevel <= 72 # Tier 5 map
	Rarity = Rare
	Corrupted False
