# Leveling Items
Show
	AreaLevel < 77
	Rarity = Rare
	Corrupted False
	Mirrored False
	BaseType #!strint9!# #!dexint9!# #!int9!#
	SetFontSize 35
	PlayEffect Yellow
	MinimapIcon 1 Yellow Star
	#!MediumBaseBorder!#

Show
	Class "Sceptre" "Wand"
	AreaLevel < 77
	Rarity = Rare
	SetFontSize 35
	PlayEffect Yellow
	MinimapIcon 1 Yellow Star
	#!LevelingBorder!#

