# Divination Cards
Show
	BaseType == "The Admirer"
	SetFontSize 45
	#!BrightBackground!#
	SetTextColor 255 140 54 255
	SetBorderColor 47 252 47 255
	MinimapIcon 2 Brown Star
	PlayEffect Brown
	CustomAlertSound "sounds/imexile-ok.mp3"

# Build Uniques
Show
	BaseType == "Sapphire Ring" "Aventail Helmet" "Praetor Crown" "Lacquered Garb" "Conjurer Boots" "Paua Amulet" "Samnite Helmet"
	Rarity Unique
	SetFontSize 45
	#!BrightBackground!#
	SetTextColor 255 140 54 255
	SetBorderColor 47 252 47 255
	MinimapIcon 2 Brown Star
	PlayEffect Brown
	CustomAlertSound "sounds/imexile-ok.mp3"

# Item Bases
Show
	BaseType "Profane Wand"
	Corrupted False
	Mirrored False
	Rarity <= Rare
	ItemLevel <= 81 # T1 Mana
	#!GoodBaseBorder!#
	MinimapIcon 1 Pink Star

Show
	BaseType "Divine Mana Flask" "Eternal Mana Flask"
	Rarity <= Rare
	SetFontSize 45
	MinimapIcon 1 Blue Star
	#!BrightBorder!#

