# Items
Show # fast sceptres - smite + big mana
	BaseType == "Grinning Fetish" "Karui Sceptre" "Blood Sceptre" "Vaal Sceptre"
	Corrupted False
	Mirrored False
	Rarity <= Rare
	SetFontSize 40
	#!GoodBaseBorder!#
	MinimapIcon 1 Pink Star

Show
  Class "Currency"
  BaseType "of Loathing"
  SetFontSize 45
  #!BlackText!# 255
  SetBorderColor 0 0 0 250
  #!EssenceBackground!#
  PlayAlertSound 2 50
  PlayEffect White
  MinimapIcon 2 White Circle

# Leveling Items
Show
	AreaLevel < 68
	Rarity = Rare
	Class "Boots"
	SetFontSize 45
	PlayEffect Yellow
	MinimapIcon 1 Yellow Star
	#!BrightBorder!#

Show
	AreaLevel < 77
	Rarity = Rare
	Corrupted False
	Mirrored False
	BaseType #!int9!# #!strint9!# #!dexint9!#
	SetFontSize 35
	PlayEffect Yellow
	MinimapIcon 1 Yellow Star
	#!MediumBaseBorder!#

