# Divination Cards
Show
	BaseType == "Earth Drinker"
	SetFontSize 45
	SetBackgroundColor 255 255 255 255
	SetTextColor 232 99 0 255
	SetBorderColor 47 252 47 255
	MinimapIcon 2 Brown Star
	PlayEffect Brown
	CustomAlertSound "sounds/imexile-ok.mp3"

# Build Uniques
Show
	BaseType == "Wyrmscale Gauntlets" "Gut Ripper" "Amethyst Ring" "Granite Flask"
	Rarity Unique
	SetFontSize 45
	SetBackgroundColor 255 255 255 255
	SetTextColor 232 99 0 255
	SetBorderColor 47 252 47 255
	MinimapIcon 2 Brown Star
	PlayEffect Brown
	CustomAlertSound "sounds/imexile-ok.mp3"

# Item Bases
# Add new bases
Show
	BaseType "Colossal Tower Shield"
	BaseDefencePercentile >= 50
	Corrupted False
	Mirrored False
	Rarity <= Rare
	ItemLevel >= 86
	#!GoodBaseBorder!#
	MinimapIcon 1 Pink Star
	#! tts "big shield" big-shield Amy 300 1.0

Show
	BaseType "Colossal Tower Shield"
	BaseDefencePercentile >= 80
	Corrupted False
	Mirrored False
	Rarity <= Rare
	ItemLevel >= 69
	#!GoodBaseBorder!#
	MinimapIcon 1 Pink Star

Show
	BaseType "Colossal Tower Shield"
	BaseDefencePercentile >= 70
	Corrupted False
	Mirrored False
